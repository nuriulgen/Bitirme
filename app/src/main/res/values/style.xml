<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SeeAllTab" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/magic_potion</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="SeeAllTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">#292C3D</item>
    </style>

    <style name="SubTitleText" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">#292C3D</item>
    </style>

    <style name="CustomChip" parent="Widget.Material3.ChipGroup">
        <item name="android:backgroundTint">#FCFCFD</item>
    </style>

    <style name="CornerImage" parent="">
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>


    <style name="CustomButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/magic_potion</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
    </style>

    <style name="CustomBackButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">"@drawable/ic_left_arrow"</item>
        <item name="android:background">"@drawable/circular_button"</item>
    </style>

    <style name="CustomStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="itemActiveIndicatorStyle">"@drawable/ic_nav_bar_background"</item>
        <item name="android:background">"@drawable/ic_nav_bar_background"</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="CustomCategoryButtonStyle">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomCategoryButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">#FCFCFD</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
    </style>

    <style name="CustomTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FCFCFD</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
    </style>

    <style name="CustomSubTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FCFCFD</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontWeight" tools:targetApi="o">400</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
    </style>
</resources>