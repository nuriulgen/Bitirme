<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SeeAllTab" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/magic_potion</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="SeeAllTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">#292C3D</item>
    </style>

    <style name="SubTitleText" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">#292C3D</item>
    </style>

    <style name="CustomChip" parent="Widget.Material3.ChipGroup">
        <item name="android:backgroundTint">#FCFCFD</item>
    </style>

</resources>